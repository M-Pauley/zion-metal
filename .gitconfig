[user]
        email = mpauley@cyberpunkcity.org
        name = McCoy Pauley

[cola]
        spellcheck = false
        maxrecent = 6

[gui]
        editor = code --wait

[color]
        ui = auto

[filter "lfs"]
        required = true
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process

[init]
        defaultBranch = main

[fetch]
        prune = true

[alias]
    addscr = !sh -c 'if [[ ${0: -3} == ".sh" ]]; then git update-index --chmod=+x $0; git add $0'